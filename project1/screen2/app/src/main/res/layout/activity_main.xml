<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="216dp">

            <ImageView
                android:id="@+id/penguinImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/penguin_description"
                android:onClick="onClickPenguin"
                app:srcCompat="@drawable/penguin" />

            <ImageView
                android:id="@+id/sealImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/seal_description"
                android:onClick="onClickSeal"
                app:srcCompat="@drawable/seal" />

            <ImageView
                android:id="@+id/orcaImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/orca_description"
                android:onClick="onClickOrca"
                app:srcCompat="@drawable/orca" />
        </TableRow>

        <LinearLayout
            android:id="@+id/textViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="#4F81BC"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/pic1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:height="40dp"
                android:background="#C7D9F1"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/pic2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:height="40dp"
                android:background="#C7D9F1"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/pic3Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:height="40dp"
                android:background="#C7D9F1"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#222222" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>